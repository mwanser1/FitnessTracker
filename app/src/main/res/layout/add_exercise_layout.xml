<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_exercise_add"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Add" />

            <Button
                android:id="@+id/add_exercise_cancel"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Cancel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/add_exercise_text_input"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/add_exercise_search"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Search" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/add_exercise_check_chest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest" />

            <CheckBox
                android:id="@+id/add_exercise_check_abs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abs" />
            <CheckBox
                android:id="@+id/add_exercise_check_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />
            <CheckBox
                android:id="@+id/add_exercise_check_legs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <CheckBox
                android:id="@+id/add_exercise_check_shoulders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulders" />
            <CheckBox
                android:id="@+id/add_exercise_check_calves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calves" />

            <CheckBox
                android:id="@+id/add_exercise_check_arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms" />
        </LinearLayout>

        <ListView
            android:id="@+id/add_exercise_list_result"
            android:layout_width="match_parent"
            android:layout_height="500dp">

        </ListView>

    </LinearLayout>

</ScrollView>