<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_exercise_add"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Add" />

            <Button
                android:id="@+id/add_exercise_cancel"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Cancel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/add_exercise_text_search"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/add_exercise_search"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Search" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/add_exercise_check_chest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest" />

            <CheckBox
                android:id="@+id/add_exercise_check_abs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abs" />
            <CheckBox
                android:id="@+id/add_exercise_check_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />
            <CheckBox
                android:id="@+id/add_exercise_check_legs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <CheckBox
                android:id="@+id/add_exercise_check_shoulders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulders" />
            <CheckBox
                android:id="@+id/add_exercise_check_calves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calves" />

            <CheckBox
                android:id="@+id/add_exercise_check_arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms" />
        </LinearLayout>

        <ListView
            android:id="@+id/add_exercise_list_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="350dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/add_exercise_linear_single">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/add_exercise_text_single"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:maxLines="8"
                android:maxWidth="175dp"
                android:id="@+id/add_exercise_text_desc"
                android:scrollbars="vertical" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Reps: "/>
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"

                    android:id="@+id/add_exercise_reps"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Weight: "
                    />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:id="@+id/add_exercise_weight"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Rest(s): "
                    />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"


                    android:id="@+id/add_exercise_rest"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>